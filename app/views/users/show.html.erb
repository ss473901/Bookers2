<header>
  <%= link_to"Bookers", root_path  %>
  <%= link_to"Home", user_path(current_user.id)  %>
  <%= link_to"Users", users_path %>
  <%= link_to"Books", books_path %>
  <%= link_to "logout", destroy_user_session_path, method: :delete %>
</header>

<main>
  <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
    <h2>name</h2>
    <p><%= @user.name %></p>
    <h2>introduction</h2>
    <p><%= @user.profile %></p>
    <%= link_to "編集", edit_user_path(@user.id) %>  
  
  <h2>New book</h2> 
    <%= form_with model:@book,local:true do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Option</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book"%>
    <% end %>
  
  <h2>Book detail</h2>
      <%= link_to user_path(@book.user) do %>
        <%= @book.user.name %>
      <% end %>
      <%= @book.title %>
      <%= @book.body %>
      <%= link_to "編集", edit_book_path(@book.id) %>
      <%= link_to "削除", book_path(@book.id), method: :delete %>
</main>

<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>