<header>
  <%= link_to"Bookers", root_path  %>
  <%= link_to"Home", user_path(current_user.id)  %>
  <%= link_to"Users", users_path %>
  <%= link_to"Books", books_path %>
  <%= link_to "logout", destroy_user_session_path, method: :delete %>
</header>

<main>
  <h2>User info</h2>
   <%= render 'books/list', user: @user %>
  <h2>New book</h2>
    <%= form_with model:@book,local:true do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Option</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book"%>
    <% end %>
  <h2>Books</h2>
  <tablel>
    <tr>
      <th>     </th>
      <th>Title</th>
      <th>Option</th>
    </tr>
    <br/>
    <% @user.books.each do |book| %>
      <tr>
        <tb><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no-image.png" %>  </tb>
        <tb>
           <%= link_to book_path(book) do %>
    　    　  <%= book.title %>
    　    　<% end %>
        </tb>
         <tb><%= book.body %></tb>
      </tr>
      <br/>
    <% end %>
  </tablel>
</main>

<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>