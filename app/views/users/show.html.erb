<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user %>
      
      <h2 class="mt-3">New book</h2>
        <%= form_with model:@book,local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Option</h4>
          <%= f.text_field :profile %>
          <%= f.submit "Create Book"%>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <tablel>
      <tr>
        <th>     </th>
        <th>Title</th>
        <th>Option</th>
      </tr>
      <br/>
      <% @user.books.each do |book| %>
        <tr>
          <tb><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no-image.png" %>  </tb>
          <tb>
             <%= link_to book_path(book) do %>
      　    　  <%= book.title %>
      　    　<% end %>
          </tb>
           <tb><%= book.body %></tb>
        </tr>
        <br/>
      <% end %>
    </tablel>
    </div>
  </div>
</div>