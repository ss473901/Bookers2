<div class="container px-5 px-sm-0">
   <div class="row">
      <h2>Followers Users</h2>
    <% if @users.present? %>
       <table class="table">
         <thead>
           <tr>
             <th>image</th>
             <th>name</th>
             <th colspan="3"></th>
             <th colspan="3"></th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
             <% @users.each do |user| %>
              <tr>
                 <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no-image.png",size:'40x40', class:"attachment user profile_image fallback" %></td>               <td>p</td>
                 <td><%= user.name %></td>
                 <td><p>フォロー数:<%= user.followings.count %></p></td>
                 <td> <p>フォロワー数:<%= user.followers.count %></p></td>
                 <td><%= link_to"Show", user_path(user) %></td>
               </tr>
             <% end %>
         </tbody>
       </table>
    <% else %>
      <table class="table">
        <tr>
           <td><p>ユーザがいません</p></td>
        </tr>
      </table>
    <% end %>
   </div>
</div>