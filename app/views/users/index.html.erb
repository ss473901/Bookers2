  </nav>
</header>

<main>
<h2>User info</h2>

<h2>New book</h2>
  <%= form_with model:@book,local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Option</h4>
    <%= f.text_field :body %>
    <%= f.submit "Create Book"%>
  <% end %>


<h2>Users</h2>
    <% @users .each do|user| %>
      <%= attachment_image_tag user, :profile_image, fallback: "no-image.png" %>
      <%= user.name %>
      <%= link_to"Show", user_path(user) %>
    <% end %>
</main>

