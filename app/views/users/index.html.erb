<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
       <h2>User info</h2>
          <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no-image.png" %>
          <table>
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.profile %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
       <h2 class="mt-3">New book</h2>
          <%= form_with model:@book,local:true do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Option</h4>
            <%= f.text_field :profile %>
            <%= f.submit "Create Book"%>
          <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
       <tablel>
         <tr>
           <th>image</th>
           <th>name</th>
           <th></th>
         </tr>
         <br/>
         <tr>
          <% @users.each do |user| %>
           <tb><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no-image.png" %></tb>
           <tb><%= user.name %></tb>
           <tb><%= link_to"Show", user_path(user) %></tb>
           <br/>
          <% end %>
         </tr>
       </tablel>
    </div>
  </div>
</div>