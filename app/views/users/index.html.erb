<div class="container px-5 px-sm-0">
    <div id="error_explanation" class="text-danger">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </div>
  <div class="row">
    <div class="col-md-3">
       <h2>User info</h2>
          <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no-image.png",size:'100x100', class:"attachment user profile_image fallback" %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.profile %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
        <h2 class="mt-3">New book</h2>
          <%= form_with model:@book,local:true do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title, class:"form-control book_title" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Option</label>
              <%= f.text_area :body,class:"form-control book_body" %>
            </div>
            <div class="form-group">
              <%= f.submit "Create Book",class:"btn btn-success" %>
            </div>
          <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
       <table class="table">
         <thead>
           <tr>
             <th>image</th>
             <th>name</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @users.each do |user| %>
            <tr>
               <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no-image.png",size:'40x40', class:"attachment user profile_image fallback" %></td>
               <td><%= user.name %></td>
               <td><%= link_to"Show", user_path(user) %></td>
             </tr>
           <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>