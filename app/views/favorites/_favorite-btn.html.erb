<% if current_user.already_favorited?(book) %>
  <%= link_to book_favorites_path(book),data: {"turbolinks" => false}, method: :delete, remote: true do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book),data: {"turbolinks" => false}, method: :post, remote: true do %>
    <i class="fas fa-heart heart_red"></i>
  <% end %>
<% end %>
<%= book.favorites.count %>