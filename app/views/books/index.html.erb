<h2>User info</h2>
<%= render 'books/list', user: @user %>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book"%>
<% end %>

<h2>Books</h2>
  <tablel>
   <tr>
     <th>image</th>
     <th>name</th>
     <th></th>
   </tr>
   <br/>
   <% @books.each do |book| %>
     <tr>
       <td><%= attachment_image_tag book.user, :profile_image,:fill, 100, 100, format: 'jpeg', fallback: "no-image.png" %></td>
       <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
       <td><%= book.body%></td>
     </tr>
   <% end %>
  </tablel>