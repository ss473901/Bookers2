<header>
  <%= link_to"Bookers", root_path  %>
  <%= link_to"Home", user_path(current_user.id)  %>
  <%= link_to"Users", users_path %>
  <%= link_to"Books", books_path %>
  <%= link_to "logout", destroy_user_session_path, method: :delete %>
</header>
<main>
  <div class="User info">
    <h2>User info</h2>
    <%= render 'books/list', user: @user %>
  </div>
  <div class="New book">
    <h2>New book</h2>
    <%= form_with model:@book,local:true do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Option</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book"%>
    <% end %>
  </div>
  <div class="Books">
    <h2>Books</h2>
    <% @books.each do |book| %>
    ã€€<%= attachment_image_tag book.user, :profile_image, fallback: "no-image.png" %>
      <%= link_to book_path(book) do %>
        <%= book.title %>
      <% end %>
      <%= book.body%>
    <% end %>
  </div>
</main>
<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
