<main>
  <div class="container px-5 px-sm-0">
    <div id="error_explanation" class="text-danger">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/list', user: @user %>
        <h2 class="mt-3">New book</h2>
          <%= form_with model:@book,local:true do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title, class:"form-control book_title" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Option</label>
              <%= f.text_area :body,class:"form-control book_body" %>
            </div>
            <div class="form-group">
              <%= f.submit "Create Book",class:"btn btn-success" %>
            </div>
          <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image,:fill, 100, 100, format: 'jpeg', fallback: "no-image.png",size:'40x40', class:"attachment user profile_image fallback" %>
                  <% end %>
                </td>
                <td>
                   <%= link_to book_path(book) do %>
                     <%= book.title %>
                   <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>