<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h2>
      <%= form_with model:@book,local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Option</h4>
        <%= f.text_area :body %> <br></br>
        <%= f.submit "Update Book" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>

