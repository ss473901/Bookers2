 <div class="container px-5 px-sm-0">
   <div class="row">
     <div class="col-md-3">
      <%= render 'books/list', user: @user %>
      <h2 class="mt-3">New book</h2>
        <%= form_with model:@books,local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:"form-control book_title" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Option</label>
            <%= f.text_area :body,class:"form-control book_body" %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Book",class:"btn btn-success" %>
          </div>
        <% end %>
     </div>
     <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table">
       <tbody>
         <tr>
           <td>
            <%= attachment_image_tag @user, :profile_image,:fill, 100, 100, format:'jpg' , fallback: "no-image.png",size:'40x40', class:"attachment user profile_image fallback" %> <br>
            <%= link_to user_path(@user) do %>
             <%= @user.name %>
            <% end %>
           </td>
           <td>
            <%= link_to book_path(@book) do %>
            <%= @book.title %>
            <% end %>
           </td>
           <td><%= @book.body %></td>
           <td id="favorite_buttons_<%= @book.id %>">
              <%= render 'favorites/favorite-btn', book: @book %>
           </td>
           <td>
              <p>コメント数:<%= @book.book_comments.count %></p>
           </td>
           <% if @user.id ==  current_user.id %>
           <td><%= link_to "Edit", edit_book_path(@book),class:"btn btn-sm btn-success edit_book_20900" %></td>
           <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger destroy_book_20900" %></td>
           <% end %>
         </tr>
       </tbody>
     </table>
     <table>
        <tbody>
          <% @comments.each do |book_comment| %>
           <tr>
             <td>
               <%= attachment_image_tag book_comment.user, :profile_image,:fill, 100, 100, format: 'jpeg', fallback: "no-image.png",size:'40x40', class:"attachment user profile_image fallback" %>
               <br></br>
               <%= book_comment.user.name %>
             </td>
             <td>
               <%= book_comment.body %>
             </td>
             <td>
               <% if book_comment.user == current_user %>
                <%= link_to"Destroy",book_book_comment_path(book_comment.book,book_comment), method: :delete, class:"btn-danger btn-sm" %>
               <% end %>
             </td>
           </tr>
         <% end %>
         </tbody>
     </table>
        <table class="table">
          <tbody>
            <tr>
              <!--コメント一覧機能-->
              <%= render 'book_comments/comment',book: @book, book_comments: @book_comments %>
             </tr>
         </tbody>
        </table>
      </div>
     </div>
   </div>
 </div>