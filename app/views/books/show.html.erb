<header>
  <%= link_to"Bookers", root_path  %>
  <%= link_to"Home", user_path(current_user.id)  %>
  <%= link_to"Users", users_path %>
  <%= link_to"Books", books_path %>
  <%= link_to "logout", destroy_user_session_path, method: :delete %>
</header>

<main>
  <h2>User info</h2>
    <%= render 'books/list', user: @user %>

  <h2>New book</h2>
    <%= form_with model:@book,local:true do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Option</h4>
        <%= f.text_area :body %>
        <%= f.submit "Create Book"%>
    <% end %>

  <h2>Book detail</h2>
      <%= @book.title %>
      <%= @book.body %>
      <%= link_to "編集", edit_book_path(@book.id) %>
      <%= link_to "削除", book_path(@book.id), method: :delete %>
</main>

<footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
