<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="contailer">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" date-toggle="collapse" date-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"></button>
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
               <li class="nav-item">
                 <%= link_to"Home", user_path(current_user)  %>
               </li>
               <li class="nav-item">
                 <%= link_to"Users", users_path %>
               </li>
               <li class="nav-item">
                 <%= link_to"Books", books_path %>
               </li>
               <li class="nav-item">
                 <%= link_to "logout", destroy_user_session_path, method: :delete %>
               </li>
               <% else %>
               <li class="nav-item">
                 <%= link_to"Home", root_path  %>
               </li>
               <li class="nav-item">
                 <%= link_to"About", about_path %>
               </li>
               <li class="nav-item">
                 <%= link_to"sign_up",new_user_registration_path %>
               </li>
               <li class="nav-item">
                 <%= link_to"login", new_user_session_path %>
                </li>
              <% end %>
            </ul>
         </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
      <%= yield %>
    </main>
    <footer class="bg-dark text-white pt-5 pb-4">
      <div class="contailer">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>